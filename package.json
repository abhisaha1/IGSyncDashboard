{
    "name": "Cliptales",
    "version": "1.0.0",
    "description": ":) ",
    "main": "start.js",
    "scripts1": {
        "build:webpack": "NODE_ENV=production webpack --config webpack.config.prod.js",
        "build": "npm run clean && npm run build:webpack",
        "test": "NODE_ENV=production mocha './tests/**/*.spec.js' --compilers js:babel-core/register",
        "clean": "rimraf dist",
        "start": "node ."
    },
    "scripts": {
        "start": "concurrent --kill-others \"npm run start-prod\" ",
        "start-prod": "better-npm-run start-prod",
        "postinstall": "npm run build",
        "build": "better-npm-run build",
        "start-dev": "better-npm-run start-dev",
        "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run start-dev\" \"npm run start-dev-api\""
    },
    "betterScripts": {
        "start-prod": {
            "command": "node ./start.js",
            "env": {
                "NODE_PATH": "./src",
                "NODE_ENV": "production",
                "CLIENTPORT": 4040,
                "APIPORT": 3030,
                "APPPORT": 8081,
                "APIHOST": "api.cliptales.com"
            }
        },
        "start-dev": {
            "command": "node ./start.js",
            "env": {
                "NODE_PATH": "./src",
                "NODE_ENV": "development",
                "CLIENTPORT": 4040,
                "APIPORT": 3030,
                "APPPORT": 8081,
                "APIHOST": "localhost"
            }
        },
        "build": {
            "command": "webpack --verbose --colors --display-error-details --config webpack.config.prod.js",
            "env": {
                "NODE_ENV": "production"
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wesbos/Learn-Redux.git"
    },
    "author": "Abhishek Saha",
    "license": "MIT",
    "homepage": "http://ajaxtown.com",
    "dependencies": {
        "babel-core": "^6.5.2",
        "babel-eslint": "^5.0.0",
        "babel-loader": "^6.2.3",
        "babel-plugin-react-transform": "^2.0.0",
        "babel-plugin-transform-object-rest-spread": "^6.5.0",
        "babel-plugin-transform-react-display-name": "^6.5.0",
        "babel-polyfill": "^6.5.0",
        "babel-preset-es2015": "^6.5.0",
        "babel-preset-react": "^6.5.0",
        "babel-register": "^6.18.0",
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.15.2",
        "concurrently": "^3.1.0",
        "css-loader": "^0.23.1",
        "dateformat": "^2.0.0",
        "ejs": "^2.5.5",
        "eslint": "^2.2.0",
        "eslint-plugin-babel": "^3.1.0",
        "eslint-plugin-react": "^4.1.0",
        "express": "^4.13.4",
        "express-mysql-session": "^1.2.0",
        "express-session": "^1.14.2",
        "instagram-node": "^0.5.8",
        "jquery": "^3.1.1",
        "moment": "^2.17.1",
        "object-assign": "^4.1.0",
        "raven-js": "^2.1.1",
        "react": "^0.14.7",
        "react-addons-css-transition-group": "^0.14.7",
        "react-dom": "^0.14.7",
        "react-redux": "^4.4.0",
        "react-router": "^2.0.0",
        "react-router-redux": "^4.0.0",
        "react-transform-catch-errors": "^1.0.2",
        "react-transform-hmr": "^1.0.2",
        "redbox-react": "^1.2.2",
        "redux": "^3.3.1",
        "redux-thunk": "^2.1.0",
        "rimraf": "^2.5.2",
        "style-loader": "^0.13.0",
        "stylus-loader": "^1.5.1",
        "web-push": "^3.2.1",
        "webpack": "^1.12.14",
        "webpack-dev-middleware": "^1.5.1",
        "webpack-hot-middleware": "^2.7.1"
    },
    "devDependencies": {
        "babel-core": "^6.21.0",
        "babel-preset-stage-0": "^6.16.0",
        "better-npm-run": "0.0.14",
        "expect": "^1.14.0",
        "expect-jsx": "^2.3.0",
        "isomorphic-fetch": "^2.2.1",
        "localforage": "^1.4.3",
        "mocha": "^2.4.5",
        "react-addons-test-utils": "^0.14.7",
        "react-masonry-component": "^5.0.3",
        "redux-devtools": "^3.3.1",
        "redux-devtools-dock-monitor": "^1.1.1",
        "redux-devtools-log-monitor": "^1.2.0",
        "remote-redux-devtools": "^0.5.7"
    },
    "babel": {
        "presets": [
            "react",
            "es2015"
        ],
        "env": {
            "development": {
                "plugins": [
                    [
                        "transform-object-rest-spread"
                    ],
                    [
                        "transform-react-display-name"
                    ],
                    [
                        "react-transform", {
                            "transforms": [{
                                "transform": "react-transform-hmr",
                                "imports": [
                                    "react"
                                ],
                                "locals": [
                                    "module"
                                ]
                            }, {
                                "transform": "react-transform-catch-errors",
                                "imports": [
                                    "react",
                                    "redbox-react"
                                ]
                            }]
                        }
                    ]
                ]
            },
            "production": {
                "plugins": [
                    [
                        "transform-object-rest-spread"
                    ],
                    [
                        "transform-react-display-name"
                    ]
                ]
            }
        }
    },
    "eslintConfig": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "env": {
            "browser": true,
            "node": true
        },
        "parser": "babel-eslint",
        "rules": {
            "quotes": [
                2,
                "single"
            ],
            "strict": [
                2,
                "never"
            ],
            "babel/generator-star-spacing": 1,
            "babel/new-cap": 1,
            "babel/object-shorthand": 1,
            "babel/arrow-parens": 1,
            "babel/no-await-in-loop": 1,
            "react/jsx-uses-react": 2,
            "react/jsx-uses-vars": 2,
            "react/react-in-jsx-scope": 2
        },
        "plugins": [
            "babel",
            "react"
        ]
    }
}